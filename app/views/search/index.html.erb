<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between bd-highlight mb-3">
  <div class="p-2">
    <h1>Search results</h1>
  </div>
  <div class="mt-3 p-2 bd-highlight">
    <%=render 'search/search_form' %>
  </div>
</div>

<div id="articles">
  <% if @articles.any? %>
    <% @articles.each do |article|  %>
      <div class="border border-secondary rounded-3">
        <%=  render :partial => "articles/article", :locals => { :article => article } %>
        <p class="m-2">
          <%=  link_to "Show this article", "/articles/#{article.id}", class: 'btn btn-secondary'  %>
        </p>
      </div>
    <% end  %>

  <% else %>
    <div class="container"><h4> Results not found </h4></div>
  <%  end %>
</div>

<%= link_to "Back to articles", articles_path, class: 'mt-3 btn btn-primary' %>
