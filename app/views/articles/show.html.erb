<p style="color: green"><%= notice %></p>

<div class="border border-secondary rounded-3">
  <%= render @article %>
</div>

<div class="mt-2">
  <%= link_to "Edit this article", edit_article_path(@article), class: 'btn btn-success' %> |
  <%= link_to "Back to articles", articles_path, class: 'btn btn-primary' %>

  <%= button_to "Destroy this article", @article, method: :delete, class: 'mt-3 btn btn-danger'%>
</div>
