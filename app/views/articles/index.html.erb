<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between bd-highlight mb-3">
  <div class="p-2">
    <h1>Articles</h1>
  </div>
  <div class="mt-3 p-2 bd-highlight">
    <%=render 'search/search_form' %>
  </div>
</div>

<div id="articles">
  <% @articles.each do |article| %>
    <div class="border border-secondary rounded-3">
      <%= render article %>
      <p class="m-2">
        <%= link_to "Show this article", article, class: 'btn btn-secondary' %>
      </p>
    </div>

  <% end %>
</div>

<%= link_to "New article", new_article_path, class: 'mt-3 btn btn-success' %>
